{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "./public/*",
            "use": "@vercel/static"
    }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js",
            "headers": {
                "cache-control": "no-store, no-cache, must-revalidate, proxy-revalidate",
                "pragma": "no-cache",
                "expires": "0"
            }
        }
    ]
}